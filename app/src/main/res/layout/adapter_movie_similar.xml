<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMovieAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/imageMovieSimilar"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
            </ImageView>

            <TextView
                android:id="@+id/textTitleMovieSimilar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="Title movie"
                android:layout_toEndOf="@+id/imageMovieSimilar"
                />

            <TextView
                android:id="@+id/textAgeMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTitleMovieSimilar"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                tools:text="1999"
                android:layout_toEndOf="@+id/imageMovieSimilar"
                />

            <TextView
                android:id="@+id/textGenres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTitleMovieSimilar"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="30dp"
                android:textColor="@android:color/white"
                tools:text="Genres"
                android:layout_toEndOf="@+id/textAgeMovie"
                />

            <ImageView
                android:id="@+id/imageIconCheck"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_circle"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="10dp"
                android:background="#aaa"
                android:layout_below="@+id/textGenres"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>